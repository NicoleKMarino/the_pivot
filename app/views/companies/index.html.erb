<div class="page-content">
  <h2>All Companies:</h2>

  <div class="filter">
    <div class="row well col-md-10">
    <!-- <div class="col-xs-offset-3 col-xs-6 text-center thumbnail"> -->
    <label>Filter By</label>
    <%= select :company, :filter_location, @locations, {:prompt => 'Location'} %>
  </div>
  <br>

  <div id="items_list">
    <%@companies.each do |company|%>
      <div class="well col-md-3 company-in-list job">
        <%= image_tag(company.img_path, class: "company-image", alt: company.name) %>
        <br></br>

        <h4><%=link_to "#{company.name.capitalize}", company_path(company.id)%></h4>
        <div class="panel-body format-panel">
          <p><%= company.location %></p>
          <p><%= company.industry.name %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
