<div class="page-content">
  <h1>My Applications</h1>
  
  <% @job_applications.each do |job_application| %>
    <div class="well col-md-8 table-responsive" id="application-<%= job_application.id %>">
      <table class="table">
        <thead>
          <tr>
            <td colspan="5" class="text-left">
              <%= link_to "Job Application # #{job_application.id}", user_job_application_path(job_application) %>
            </td>
          <tr>
            <th>Industry</th>
            <th>Company</th>
            <th>Job Title</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= job_application.job.company.industry.name %></td>
            <td><%= job_application.job.company.name %></td>
            <td><%= job_application.job.title %></td>
            <td><%= job_application.status.capitalize %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>

</div>