<div class="page-content">

<h2>Profile for <%= current_user.username %></h2>
  <div class="well table-responsive col-md-6">

    <table class="table">
      <tr>
        <th>Full Name</th>
        <td><%= current_user.first_name %> <%= current_user.last_name %></td>
      </tr>
      <tr>
        <th>E-mail</th>
        <td><%= current_user.email %></td>
      </tr>
      <tr>
        <th>Date Registered</th>
        <td><%= current_user.date_registered %></td>
      </tr>
      <tr>
        <th>Address</th>
          <td>
            <%= current_user.address %>,
            <%= current_user.city %>,
            <%= current_user.state %>,
            <%= current_user.zip_code %>
          </td>
      </tr>
    </table>
    <%= link_to 'Saved Jobs', saved_jobs_path, class: 'btn btn-default' %>
    <%= link_to 'My Applications', user_job_applications_path, class: 'btn btn-default' %>
    <%= link_to 'Edit Profile', edit_user_path(current_user), class: 'btn btn-default' %>
  </div>
</div>
