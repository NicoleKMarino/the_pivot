<div class="page-content">
  <div class='page-content'>
    <center>
    <h2>Open Applications</h2>
  </center>
  <% @bucket_applications.each do |application| %>
    <div class="well col-md-8 table-responsive jobs-list">
      <table class="table">
        <thead>
          <tr>
            <td colspan="5" class="text-left">
              Job Position: <%= job_format(application) %>
            </td>
          <tr>
            <th>Summary Paragrah</th>
            <th>Status</th>
            <th>
            <% if current_user %>
              <%= button_to "Complete this Application", edit_job_application_path(application), method: :get %>
            <% else %>
              <%=button_to "Login or Create Account to Continue Application", login_path, method: :get, class:"btn btn-warning" %>
            <% end %>
          </th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= application.summary %></td>
            <td>Open</td>
            <td><%= button_to "Remove this Application", bucket_application_path(application), method: :delete %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
