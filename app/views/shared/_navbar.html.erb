<div class="navbar navbar-default navbar-fixed-top">
  <div class="navbar-brand">
    <%= link_to "MakeMyPayday", root_path, class: 'site-name' %>
    <%#= link_to image_tag('logo-big.png', class: 'logo'), root_path %>
  </div>
  <ul class="nav navbar-nav navbar-right">
    <li>
      <%= link_to "Started Applications: #{@bucket.total_jobs}", bucket_index_path %>
    </li>
    <li>
      <% if current_user %>
      <div class='navbar-header user-info'>
        <%= link_to "Logged in as #{current_user.username}", dashboard_path %>
      </div>
      <% end %>
    </li>

    <% if current_user %>
      <li>
        <%= link_to logout_path, method: :delete do %>
        <i class="fa fa-sign-out"></i> Logout
        <% end %>
      </li>
    <% else %>
      <li>
        <%= link_to login_path do %>
        <i class="fa fa-sign-in"></i> Login
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
